      <atom:category scheme="http://schemas.google.com/g/2005#kind"
        term="http://schemas.google.com/contact/2008#group"/>
      <atom:title type="text"><%= group_attrs[:title].to_s.gsub("\v", "\n").encode(xml: :text) %></atom:title>
    </atom:entry>
